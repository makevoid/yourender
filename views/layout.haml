!!! 5
%html
  - TITLE = "YouRender"
  %head
    %title= TITLE
    %link{ rel: "stylesheet", href: "/css/main.css" }
    = partial :metas

  %body{ class: "#{section}_page" }
    #container
      %header
        %h1
          - if logged?
            .logout
              %form{ action: "/logout", method: "post" }
                %input{ value: "Logout", type: "submit" }
          %a{ href: "/" }
            #{TITLE}.it
            %span.tagline= t "Create your personal render farm", "Crea la tua render farm"
      %section.content
        = yield
        .clear
        
        - if DEBUG
          %a.debug{ href: "javascript:void(0)", onclick: "$('#debug').toggle()" } [-]
          #debug
            %h1 Debug
            = @debug

            %p developer note: assign debug content to @debug variable

    %script{ type: "text/javascript", src: "/js/vendor/underscore.js" }
    %script{ type: "text/javascript", src: "/js/vendor/jquery.js" }
    %script{ type: "text/javascript", src: "/js/app.js" }